@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Assignment</h4>
    <hr />

        <div class="form-horizontal">
            <h4>Assignment: @ViewBag.model.Assignment.Title</h4>
            <hr />
            <table class="table table-striped table-bordered"">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in ViewBag.model.Milestones)
                    {
                        <tr>
                            <td>@x.Title</td>
                            <td><a href="/Assignments/MilestoneDetail/@x.ID">Skila</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit solution" class="btn btn-default" />
                </div>
            </div>
        </div>
</div>
