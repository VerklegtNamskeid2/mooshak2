@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @ViewBag.model.Assignment.Title    
        </dt>
    </dl>
    @foreach (var x in ViewBag.model.Milestones)
    {
        <li><a href="/Assignments/MilestoneDetails/@x.ID">@x.Title</a></li>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Assignment: @ViewBag.model.Assignment.Title</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
            <div class="form-group">
                Lausn
                <div class="col-md-10">
                    <textarea name="solution" cols="60" rows="8"></textarea>
                 </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit osllution" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
</div>
