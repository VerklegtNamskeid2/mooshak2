@{
    ViewBag.Title = "Details";
    ViewBag.createURL = "/Assignments/CreateMilestone/" + ViewBag.model.Assignment.ID;
}

<h2>Details</h2>

<div>
    <h4>Assignment</h4>

        <div class="form-horizontal">
            <h4>Assignment: @ViewBag.model.Assignment.Title</h4>
            <hr />
            <table class="table table-striped table-bordered"">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Weight</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in ViewBag.model.Milestones)
                    {
                        <tr>
                            <td>@x.Title</td>
                            <td>@x.weight</td>
                            <td><a href="/Assignments/MilestoneDetail/@x.ID">Skila</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    <hr />
    <h3>Submit history</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Score</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in ViewBag.solutions)
            {
                <tr>
                    <td>@x.ID</td>
                    <td>@x.MilestoneID</td>
                    <td>@x.correctness</td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary btn-lg" href="@ViewBag.createURL">Create milestone</a>
</div>
