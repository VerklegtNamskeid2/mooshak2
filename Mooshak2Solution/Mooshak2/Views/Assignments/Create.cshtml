@model Mooshak2.Models.ViewModels.AssignmentCreateViewModel

@{
    ViewBag.Title = "Create Assignment";
}

<h2 class="create-ass-title">Create Assignment</h2>

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal create-ass-box">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Assignment.Title, "Title", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Assignment.Title, new { htmlAttributes = new { @class = "form-control" } })

            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Assignment.Description, "Description", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Assignment.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Assignment.OpeningDate, "OpeningDate", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Assignment.OpeningDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Assignment.ClosingDate, "ClosingDate", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Assignment.ClosingDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Assignment.SubmissionLimit, "SubmissionLimit", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Assignment.SubmissionLimit, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Assignment.CourseID, "CourseID", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.Assignment.CourseID, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit assignment" class="btn btn-default create-ass-button" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Milestone anyone?", "CreateMilestone")
        </p>

    </div>
}
