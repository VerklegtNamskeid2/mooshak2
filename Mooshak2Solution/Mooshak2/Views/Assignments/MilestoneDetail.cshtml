
@{
    ViewBag.Title = "MilestoneDetail";
}

<h2>MilestoneDetail</h2>

@using (Html.BeginForm("MilestoneDetail", "Assignments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
        <h4>Submit solution for @ViewBag.milestone.Milestone.Title</h4>
        <hr />
        <input type="hidden" name="MilestoneID" value="@ViewBag.milestone.Milestone.ID" />
        <div class="form-group">
            <div class="control-label col-md-2">
                <label for="title">
                    File
                </label>
            </div>
            <div class="col-md-10">
                <input type="file" name="file" />
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                
            </div>
            <div class="col-md-10">
                <input type="submit" value="Submit Solution" />
            </div>
        </div>
    </div>
}