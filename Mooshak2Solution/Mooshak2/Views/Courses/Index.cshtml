@model Mooshak2.Models.ViewModels.CoursesViewModel

@{
    ViewBag.Title = "Index";
}




<h2>Courses</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>

        </th>
        
    </tr>
</table>

@foreach (var item in Model.CoursesTeacher)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID})
            @Html.ActionLink("Details", "Details", new { id=item.ID})
        </td>
    </tr>
}

@foreach (var item in Model.CoursesStudent)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
            @Html.ActionLink("Details", "Details", new { id = item.ID })
        </td>
    </tr>
}



