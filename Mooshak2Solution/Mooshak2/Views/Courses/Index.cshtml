@model Mooshak2.Models.ViewModels.CoursesViewModel

@{
    ViewBag.Title = "Index";
}




<h3>Teacher in:</h3>

<table class="table our-table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Assignments
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.CoursesTeacher)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

